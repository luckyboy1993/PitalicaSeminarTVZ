@model PitalicaSeminar.DAL.Entities.Exam

@{
    ViewData["Title"] = "Write";
}

<h2>Write</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ExamId" />

            @Html.HiddenFor(m => m.UserId, new { @Value = Model.User.UserId })

            <table class="table">
                <tbody>
                    @for (int i = 0; i < Model.Questions.Count; i++)
            {
                <tr>
                    <td>
                        @Model.Questions.ToList()[i].Definition
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="form-group">
                            <input asp-for="@Model.Questions.ToList()[i].Answer" class="form-control" />
                        </div>
                    </td>
                </tr>
    }
                </tbody>
            </table>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
